@model IEnumerable<hero.herotbl>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Search Name:  @Html.TextBox("searchHeroes")
        <input type="submit" value="Search"/>
  </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.From)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Powers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weapons)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enemy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KnownFriends)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Groups)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.From)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Powers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weapons)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Enemy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KnownFriends)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Groups)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.Image)" style="height:75px"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
